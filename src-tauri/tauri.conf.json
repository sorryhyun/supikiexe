{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Mascot",
  "version": "0.1.0",
  "identifier": "com.claude.mascot",
  "build": {
    "beforeDevCommand": "npm run vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Claude Mascot",
        "width": 160,
        "height": 140,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [
      "../sidecar-dist/agent-sidecar.exe",
      "../sidecar-dist/prompt.txt",
      "../sidecar-dist/supiki_prompt.txt"
    ]
  }
}
